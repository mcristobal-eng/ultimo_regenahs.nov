Â  Â  Â  Â  function addToCart(event) {
Â  Â  Â  Â  Â  Â  const button = event.target;
Â  Â  Â  Â  Â  Â  const id = button.dataset.id;
Â  Â  Â  Â  Â  Â  const name = button.dataset.name;
Â  Â  Â  Â  Â  Â  const price = parseInt(button.dataset.price);
            const image = button.dataset.image;

Â  Â  Â  Â  Â  Â  const existingItem = cart.find(item => item.id === id);

Â  Â  Â  Â  Â  Â  if (existingItem) {
Â  Â  Â  Â  Â  Â  Â  Â  existingItem.quantity++;
Â  Â  Â  Â  Â  Â  } else {
Â  Â  Â  Â  Â  Â  Â  Â  cart.push({ id, name, price, image, quantity: 1 });
Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  renderCart();
Â  Â  Â  Â  Â  Â  openCart();
Â  Â  Â  Â  }
        
