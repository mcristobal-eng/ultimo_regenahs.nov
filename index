        // Muestra u oculta los detalles de transferencia
        function togglePaymentInfo() {
            if (paymentMethodSelect.value === 'Mercado Pago / Transferencia') {
                bankDetails.classList.add('show');
            } else {
                bankDetails.classList.remove('show');
            }
        }
        
Â  Â  Â  Â  // LÃ³gica de envÃ­o del formulario
Â  Â  Â  Â  orderForm.addEventListener('submit', (event) => {
Â  Â  Â  Â  Â  Â  event.preventDefault();
Â  Â  Â  Â  Â  Â  handleCheckoutSubmit();
Â  Â  Â  Â  });
        
        function handleCheckoutSubmit() {
            const name = document.getElementById('customerName').value;
            const email = document.getElementById('customerEmail').value;
            const address = document.getElementById('customerAddress').value;
            const paymentMethod = paymentMethodSelect.value;
            
            if (!name || !email || !address || !paymentMethod) {
                alert('Por favor, completa todos los campos del formulario.');
                return;
            }

            const totalAmount = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);

            const whatsappMessage = generateWhatsAppLink(
                { name, address, paymentMethod }, 
                cart, 
                totalAmount
            );

            // Redirigir a WhatsApp
            window.open(whatsappMessage, '_blank');
            
            // Opcional: limpiar carrito y cerrar modal
            // cart = [];
            // renderCart();
            // closeCheckout();
        }

        function generateWhatsAppLink(details, items, total) {
            let message = "Â¡Hola! Quiero hacer un pedido de Aceite de Oliva REGENAHS.\n\n";
            
            // 1. Detalles del Cliente
            message += "*DATOS DEL PEDIDO*\n";
            message += `Nombre: ${details.name}\n`;
            message += `DirecciÃ³n: ${details.address}\n`;
            message += `MÃ©todo de Pago: ${details.paymentMethod}\n\n`;

            // 2. ArtÃ­culos en el Carrito
            message += "*RESUMEN DE PRODUCTOS*\n";
            items.forEach(item => {
                const price = formatCurrency(item.price);
                const subtotal = formatCurrency(item.price * item.quantity);
                message += `- ${item.quantity}x ${item.name} (${price} c/u) = ${subtotal}\n`;
            });
            message += "\n";
            
            // 3. Total
            message += `*TOTAL FINAL: ${formatCurrency(total)}*\n\n`;

            // 4. Instrucciones de Pago (si es transferencia)
            if (details.paymentMethod.includes('Transferencia')) {
                message += "Confirmado, el pago serÃ¡ por transferencia/Mercado Pago. Por favor, enviÃ¡ el comprobante por este medio.\n";
            } else {
                message += "Confirmado, el pago serÃ¡ en Efectivo.\n";
            }
            
            // NÃºmero de WhatsApp (debe ser el de Argentina: +54 9 11 6961-4456)
            const phoneNumber = '5491169614456'; 
            
            // Codificar el mensaje para la URL
            return `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
        }

        // --- InicializaciÃ³n ---
        window.onload = () => {
            loadCart(); // Cargar carrito al iniciar
        };

