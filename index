        function saveCart() {
            localStorage.setItem('regenahsCart', JSON.stringify(cart));
        }

        function loadCart() {
            const savedCart = localStorage.getItem('regenahsCart');
            if (savedCart) {
                cart = JSON.parse(savedCart);
                renderCart();
            }
        }
        
Â  Â  Â  Â  function updateCartTotal() {
Â  Â  Â  Â  Â  Â  const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
Â  Â  Â  Â  Â  Â  const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);

Â  Â  Â  Â  Â  Â  cartTotalSpan.textContent = formatCurrency(total);
Â  Â  Â  Â  Â  Â  cartBadge.textContent = totalItems;
Â  Â  Â  Â  Â  Â  cartBadge.style.display = totalItems > 0 ? 'block' : 'none';
Â  Â  Â  Â  Â  Â  checkoutBtn.disabled = totalItems === 0;

            saveCart();
Â  Â  Â  Â  }

Â  Â  Â  Â  function renderCart() {
