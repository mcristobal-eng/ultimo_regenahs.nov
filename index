Â  Â  Â  Â  function changeSlide(sliderId, direction) {
Â  Â  Â  Â  Â  Â  const wrapper = document.querySelector(`.product-image[data-slider-id="${sliderId}"] .product-slider-wrapper`);
Â  Â  Â  Â  Â  Â  const slider = wrapper.querySelector('.product-slider');
            const slides = slider.querySelectorAll('.product-slide');
Â  Â  Â  Â  Â  Â  const slideWidth = slides[0].clientWidth;

Â  Â  Â  Â  Â  Â  let currentIndex = sliderStates[sliderId];
Â  Â  Â  Â  Â  Â  const totalSlides = slides.length; // 4 slides

Â  Â  Â  Â  Â  Â  currentIndex += direction;
Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  slider.style.transition = 'transform 0.5s ease';
Â  Â  Â  Â  Â  Â  slider.style.transform = `translateX(-${currentIndex * slideWidth}px)`;

Â  Â  Â  Â  Â  Â  // Manejo del loop infinito:
Â  Â  Â  Â  Â  Â  if (currentIndex >= totalSlides - 1) { // Si llegamos al duplicado (Ã­ndice 3)
                // Esperar a que la transiciÃ³n termine
Â  Â  Â  Â  Â  Â  Â  Â  setTimeout(() => {
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  slider.style.transition = 'none';
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  slider.style.transform = 'translateX(0)';
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  sliderStates[sliderId] = 0; // Volver al inicio real (Ã­ndice 0)
Â  Â  Â  Â  Â  Â  Â  Â  }, 500); // 500ms es la duraciÃ³n de la transiciÃ³n
Â  Â  Â  Â  Â  Â  } else if (currentIndex < 0) { // Si vamos hacia atrÃ¡s desde el primer slide
                // Transicionar al duplicado del Ãºltimo slide
                const lastRealSlideIndex = totalSlides - 2; // (4 - 2 = 2)
Â  Â  Â  Â  Â  Â  Â  Â  slider.style.transition = 'none';
Â  Â  Â  Â  Â  Â  Â  Â  slider.style.transform = `translateX(-${lastRealSlideIndex * slideWidth}px)`;
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  // Ahora sÃ­, establecer el estado y hacer la transiciÃ³n visible
Â  Â  Â  Â  Â  Â  Â  Â  setTimeout(() => {
                    slider.style.transition = 'transform 0.5s ease';
                    slider.style.transform = `translateX(-${lastRealSlideIndex * slideWidth}px)`;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  sliderStates[sliderId] = lastRealSlideIndex;
Â  Â  Â  Â  Â  Â  Â  Â  }, 50); // PequeÃ±o delay para resetear
            } else {
                sliderStates[sliderId] = currentIndex;
            }
Â  Â  Â  Â  }


