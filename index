    <script>
        // L√≥gica de Men√∫ M√≥vil
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');

        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            mobileMenuBtn.classList.toggle('active');
        });

        function closeMenu() {
            navLinks.classList.remove('active');
            mobileMenuBtn.classList.remove('active');
        }

        // Simulaci√≥n de L√≥gica de Slider (ajustada para el responsive)
        function changeSlide(sliderId, direction) {
            const slider = document.querySelector(`#${sliderId} .product-slider`);
            if (!slider) return;

            const slides = slider.children;
            // Aseguramos que slideWidth sea el ancho de cada slide dentro del wrapper
            const slideWidth = slides[0].offsetWidth; 
            const totalSlides = slides.length - 1; // Excluye el duplicado del inicio/fin para el loop

            // Obtener el desplazamiento actual
            let currentTranslateX = parseFloat(slider.style.transform.replace('translateX(', '').replace('px)', '')) || 0;
            let currentSlideIndex = Math.round(Math.abs(currentTranslateX) / slideWidth);

            let newIndex = currentSlideIndex + direction;

            // L√≥gica de loop (transici√≥n instant√°nea despu√©s del movimiento)
            if (newIndex > totalSlides - 1) {
                newIndex = 0; // Va a la primera imagen
                slider.style.transition = 'none'; // Deshabilita la transici√≥n para el salto
                slider.style.transform = `translateX(-${newIndex * slideWidth}px)`;
                setTimeout(() => {
                    slider.style.transition = 'transform 0.4s ease-in-out';
                    newIndex = 1; // Mueve al segundo slide visible despu√©s del salto
                    slider.style.transform = `translateX(-${newIndex * slideWidth}px)`;
                }, 50);
            } else if (newIndex < 0) {
                newIndex = totalSlides; // Va al √∫ltimo slide (duplicado)
                slider.style.transform = `translateX(-${newIndex * slideWidth}px)`;
                slider.style.transition = 'transform 0.4s ease-in-out';
                setTimeout(() => {
                    newIndex = totalSlides - 1; // Mueve al pen√∫ltimo slide (real √∫ltimo)
                    slider.style.transition = 'none'; // Deshabilita la transici√≥n para el salto
                    slider.style.transform = `translateX(-${newIndex * slideWidth}px)`;
                }, 450); // Ajusta este tiempo para que sea despu√©s de la animaci√≥n visible
            } else {
                 slider.style.transition = 'transform 0.4s ease-in-out';
                 slider.style.transform = `translateX(-${newIndex * slideWidth}px)`;
            }
        }

        // L√≥gica para mostrar/ocultar detalles de pago
        function togglePaymentInfo() {
            const paymentMethod = document.getElementById('paymentMethod').value;
            const bankDetails = document.getElementById('bankDetails');
            if (paymentMethod === 'Mercado Pago / Transferencia') {
                bankDetails.style.display = 'block';
            } else {
                bankDetails.style.display = 'none';
            }
        }

        // L√≥gica de Zoom de Imagen
        function openZoom(imageSrc) {
            document.getElementById('zoomedImage').src = imageSrc;
            document.getElementById('imageZoomModal').style.display = 'flex';
        }

        function closeZoom() {
            document.getElementById('imageZoomModal').style.display = 'none';
        }
        
        // L√≥gica de Carrito (Abrir/Cerrar)
        const cartIcon = document.getElementById('cartIcon');
        const cartClose = document.getElementById('cartClose');
        const cartSidebar = document.getElementById('cartSidebar');
        const cartOverlay = document.getElementById('cartOverlay');

        function openCart() {
            cartSidebar.classList.add('open');
            cartOverlay.style.display = 'block';
        }

        function closeCart() {
            cartSidebar.classList.remove('open');
            cartOverlay.style.display = 'none';
        }

        cartIcon.addEventListener('click', openCart);
        cartClose.addEventListener('click', closeCart);
        cartOverlay.addEventListener('click', closeCart);


        // Inicializar
        document.addEventListener('DOMContentLoaded', () => {
             // Iniciar el toggle de pago en caso de que un valor est√© precargado
             togglePaymentInfo();

             // Asegurarse de que el slider de productos est√© en la primera posici√≥n al cargar.
             const slider = document.querySelector('#slider1 .product-slider');
             if (slider) {
                slider.style.transform = 'translateX(0)';
             }
        });
    </script>
